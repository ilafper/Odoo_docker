<odoo>
    <data>
        <!-- Vista de lista -->
        <record id="lista_tareas_list" model="ir.ui.view">
            <field name="name">lista.tareas.list</field>
            <field name="model">lista_tareas.lista_tareas</field>
            <field name="arch" type="xml">
                <list string="Lista de Tareas">
                    <field name="tarea"/>
                    <field name="prioridad"/>
                    <field name="urgente"/>
                    <field name="realizada"/>
                    <field name="deadline"/>
                </list>
            </field>
        </record>
        
        <record id="lista_tareas_list_with_button" model="ir.ui.view">
            <field name="name">lista.tareas.list.with.button</field>
            <field name="model">lista_tareas.lista_tareas</field>
            <field name="inherit_id" ref="lista_tareas_list"/>
            <field name="arch" type="xml">
                <xpath expr="//list" position="before">
                    <header>
                        <button name="%(lista_tareas_kanban_action)d" type="action" string="Ver Kanban" class="btn-primary"/>
                    </header>
                </xpath>
            </field>
        </record>

        <!-- Vista Kanban -->
        <record id="lista_tareas_kanban" model="ir.ui.view">
            <field name="name">lista.tareas.kanban</field>
            <field name="model">lista_tareas.lista_tareas</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <field name="tarea"/>
                    <field name="prioridad"/>
                    <field name="urgente"/>
                    <field name="realizada"/>
                    <field name="deadline"/>
                    
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_title">
                                        <field name="tarea"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div>
                                        Prioridad: <field name="prioridad"/>
                                    </div>
                                    <div>
                                        Urgente: <field name="urgente" widget="boolean_button"/>
                                    </div>
                                    <div>
                                        Realizada: <field name="realizada" widget="boolean_button"/>
                                    </div>
                                    <div>
                                        Fecha límite: <field name="deadline"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Vista formulario -->
        <record id="lista_tareas_form" model="ir.ui.view">
            <field name="name">lista.tareas.form</field>
            <field name="model">lista_tareas.lista_tareas</field>
            <field name="arch" type="xml">
                <form string="Tarea">
                    <sheet>
                        <group>
                            <field name="tarea"/>
                            <field name="prioridad"/>
                            <field name="urgente"/>
                            <field name="realizada"/>
                            <field name="deadline"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Acción de ventana principal -->
        <record id="lista_tareas_action" model="ir.actions.act_window">
            <field name="name">Listado de tareas</field>
            <field name="res_model">lista_tareas.lista_tareas</field>
            <field name="view_mode">list,kanban,form</field>
        </record>

        <!-- Acción de ventana específica para Kanban -->
        <record id="lista_tareas_kanban_action" model="ir.actions.act_window">
            <field name="name">Tablero Kanban de Tareas</field>
            <field name="res_model">lista_tareas.lista_tareas</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="view_id" ref="lista_tareas_kanban"/>
        </record>

        <!-- Menús -->
        <menuitem name="Listado de tareas" id="lista_tareas_menu_root"/>
        <menuitem name="Opciones" id="lista_tareas_menu_opciones" parent="lista_tareas_menu_root"/>
        <menuitem name="Mostrar lista" id="lista_tareas_menu_list" parent="lista_tareas_menu_opciones" action="lista_tareas_action"/>
        <menuitem name="Ver Kanban" id="lista_tareas_menu_kanban" parent="lista_tareas_menu_opciones" action="lista_tareas_kanban_action"/>

    </data>
</odoo>