<odoo>
    <data>
        <!-- Vista de lista -->
        <record id="lista_tareas_list" model="ir.ui.view">
            <field name="name">lista.tareas.list</field>
            <field name="model">lista_tareas.lista_tareas</field>
            <field name="arch" type="xml">
                <list string="Lista de Tareas">
                    <field name="tarea"/>
                    <field name="prioridad"/>
                    <field name="urgente"/>
                    <field name="realizada"/>
                    <field name="deadline"/>
                </list>
            </field>
        </record>

        <!-- Definir la vista Kanban -->
    <record id="custom_project_task_kanban_view" model="ir.ui.view">
        <field name="name">project.task.custom.kanban.view</field>
        <field name="model">project.task</field>
        <field name="arch" type="xml">
            <!-- Definimos una vista Kanban agrupada por 'stage_id' -->
            <kanban default_group_by="stage_id">
                <field name="name" />
                <field name="stage_id" />
                <field name="user_ids" />
                <field name="date_deadline" />
                
                <!-- Definir cómo se verá cada tarjeta en la vista Kanban -->
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <!-- Mostrar el nombre de la tarea -->
                            <strong><field name="name"/></strong>
                            <div>
                                <!-- Mostrar la etapa (estado) de la tarea -->
                                <span>Etapa: <field name="stage_id" /></span><br/>
                                <!-- Mostrar los usuarios asignados -->
                                <span>Asignado a: <field name="user_ids" /></span><br/>
                                <!-- Mostrar la fecha límite -->
                                <span>Fecha límite: <field name="date_deadline" /></span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

        <!-- Vista formulario -->
        <record id="lista_tareas_form" model="ir.ui.view">
            <field name="name">lista.tareas.form</field>
            <field name="model">lista_tareas.lista_tareas</field>
            <field name="arch" type="xml">
                <form string="Tarea">
                    <sheet>
                        <group>
                            <field name="tarea"/>
                            <field name="prioridad"/>
                            <field name="urgente"/>
                            <field name="realizada"/>
                            <field name="deadline"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Acción de ventana principal -->
        <record id="lista_tareas_action" model="ir.actions.act_window">
            <field name="name">Listado de tareas</field>
            <field name="res_model">lista_tareas.lista_tareas</field>
            <field name="view_mode">list,kanban,form</field>
        </record>

        <!-- Menús -->
        <menuitem name="Listado de tareas" id="lista_tareas_menu_root"/>
        <menuitem name="Opciones" id="lista_tareas_menu_opciones" parent="lista_tareas_menu_root"/>
        <menuitem name="Mostrar lista" id="lista_tareas_menu_list" parent="lista_tareas_menu_opciones" action="lista_tareas_action"/>

    </data>
</odoo>