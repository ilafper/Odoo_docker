<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="lista_tareas_kanban_view" model="ir.ui.view">
        <field name="name">lista.tareas.kanban</field>
        <field name="model">lista_tareas.lista_tareas</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="tarea"/>
                <field name="prioridad"/>
                <field name="urgente"/>
                <field name="realizada"/>
                <field name="deadline"/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <strong><field name="tarea"/></strong>
                            <div>
                                <span>Prioridad: <field name="prioridad"/></span><br/>
                                <span>Urgente: <field name="urgente"/></span><br/>
                                <span>Realizada: <field name="realizada"/></span><br/>
                                <span>Deadline: <field name="deadline"/></span><br/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


   
    <record id='action_tareas_kanban' model='ir.actions.act_window'>
        <field name="name">Mis tareas (Kanban)</field>
        <field name="res_model">project.task</field>
        <field name="view_mode">kanban,form</field>
    </record>

    
    <menuitem id="menu_custom_top_level" 
              name="Mis tareas (Kanban)"/>

    <menuitem id="menu_tareas_kanban" 
              parent="menu_custom_top_level" 
              action="action_tareas_kanban" 
              sequence="10"/>

</odoo>
